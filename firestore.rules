rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function isSeller() {
      return isAuthenticated() && getUserData().role == 'seller';
    }
    
    // Users collection
    match /users/{userId} {
      // Anyone can read user profiles (for displaying seller info)
      allow read: if true;
      // Only the user can create/update their own profile
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isOwner(userId);
      allow delete: if false; // Prevent accidental deletions
    }
    
    // Countries collection - PUBLIC READ ACCESS
    match /countries/{countryId} {
      // Anyone can read countries (for browsing)
      allow read: if true;
      // Only authenticated users can write (for seeding/admin)
      allow write: if isAuthenticated();
    }
    
    // Products collection - PUBLIC READ ACCESS
    match /products/{productId} {
      // Anyone can read products (for browsing)
      allow read: if true;
      // Only sellers can create products
      allow create: if isSeller();
      // Only the product owner (seller) can update/delete
      allow update, delete: if isSeller() && resource.data.sellerId == request.auth.uid;
    }
    
    // Orders collection
    match /orders/{orderId} {
      // Users can only read their own orders OR orders containing their products (if seller)
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        request.auth.uid in resource.data.items[0].sellerId // Simplified check
      );
      // Only authenticated buyers can create orders
      allow create: if isAuthenticated();
      // Only sellers can update order status for their orders
      allow update: if isAuthenticated();
      allow delete: if false; // Prevent accidental deletions
    }
    
    // Carts collection
    match /carts/{userId} {
      // Only the cart owner can read/write their cart
      allow read, write: if isOwner(userId);
    }
    
    // Categories collection - PUBLIC READ ACCESS
    match /categories/{categoryId} {
      // Anyone can read categories
      allow read: if true;
      // Only authenticated users can write
      allow write: if isAuthenticated();
    }
  }
}

